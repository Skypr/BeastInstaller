<izpack:userinput version="5.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:izpack="http://izpack.org/schema/userinput"
	xsi:schemaLocation="http://izpack.org/schema/userinput http://izpack.org/schema/5.0/izpack-userinput-5.0.xsd">
	<panel id="additionalOptions">


		<field type="check" variable="startAfterFinish">
			<spec txt="Start BEAST after the installation finished?" true="on" false="off" set="false"/>
		</field>

		
		<field type="check" variable="createDesktopIcon">
			<spec txt="Create a desktop shortcut to start BEAST from your Desktop?" true="on" false="off" set="false"/>
		</field>
			
			
	</panel>
</izpack:userinput>